@model ASPNET_MVC.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "_Layout";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    
    @{ var categoryId = Model.EditableProduct.CategoryId;}

    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EditableProduct.Name)
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EditableProduct.Description)
        </dd>
        <dt class="col-sm-2">
            Cena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EditableProduct.Price)
        </dd>
        <dt class="col-sm-2">
           Kategoria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EditableProduct.Category.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.EditableProduct.Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a href="@Url.Action("Index","Product",new{categoryId = categoryId})" class="btn btn-default">Powrót do listy</a>
        <a asp-action="Index" asp-route-id="@categoryId">Back to List</a>
    </form>
</div>
