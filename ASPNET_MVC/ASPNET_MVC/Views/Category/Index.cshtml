@using Microsoft.EntityFrameworkCore
@model ASPNET_MVC.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<div style="font-family:Arial">
    
    <h2>Category List</h2>
    <ul>
        @foreach (var item in Model.Categories)

        {
          <li>
                <a href="@Url.Action("Index","Product",new{categoryId = item.Id})" class="btn btn-default" >@item.Name</a>
          </li>
        }
    </ul>
</div>